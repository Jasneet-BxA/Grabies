{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ESNext",              // or ES6/ES2017+
    "module": "ESNext",              // or "CommonJS" depending on your build
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",              // IMPORTANT: enables JSX parsing
    "esModuleInterop": true,         // IMPORTANT: for default imports compatibility
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
